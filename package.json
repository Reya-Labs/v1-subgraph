{
  "name": "@voltz-protocol/v1-subgraph",
  "version": "1.0.0",
  "description": "A TypeScript graph interface for Voltz smart contract",
  "main": "dist/index.js",
  "types": "dist/types",
  "license": "MIT",
  "files": [
    "src/**/*",
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "remove-errors": "ts-node scripts/removeErrors.ts && ts-node scripts/generateBaseABIs.ts",
    "generate-base-abis": "ts-node scripts/generateBaseABIs.ts",
    "codegen": "graph codegen",
    "configure:mainnet": "mustache ../voltz-core/deployments/mainnetDeployment.json subgraph.template.yaml > subgraph.yaml",
    "configure:kovan": "mustache ../voltz-core/deployments/kovanDeployment.json subgraph.template.yaml > subgraph.yaml",
    "configure:goerli": "mustache ../voltz-core/deployments/goerliDeployment.json subgraph.template.yaml > subgraph.yaml",
    "configure:localhost": "mustache ../voltz-core/deployments/localhostDeployment.json subgraph.template.yaml > subgraph.yaml && replace --silent 'network: localhost' 'network: mainnet' subgraph.yaml",
    "create-local": "yarn configure:localhost && graph create nicholaspiano/v1-subgraph --node http://127.0.0.1:8020",
    "build": "graph build",
    "deploy-local": "graph deploy nicholaspiano/v1-subgraph --ipfs http://localhost:5001 --node http://127.0.0.1:8020",
    "deploy": "sh deploy.sh",
    "prettier": "prettier 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "eslint": "eslint 'src/**/*.ts'",
    "eslint:fix": "eslint --fix 'src/**/*.ts'",
    "test": "graph test",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@graphprotocol/graph-cli": "^0.26.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/npm": "^8.0.2",
    "@types/faker": "^5.5.8",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.178",
    "@types/luxon": "^2.0.9",
    "@types/node": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "4.31.2",
    "@typescript-eslint/parser": "4.31.2",
    "commitizen": "^4.2.4",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "^7.26.0",
    "jest": "^27.2.2",
    "lint-staged": "11.1.2",
    "matchstick-as": "^0.5.0",
    "mustache": "^4.2.0",
    "prettier": "2.4.1",
    "replace": "^1.2.1",
    "semantic-release": "^18.0.0",
    "semantic-release-cli": "^5.4.4",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@graphprotocol/graph-ts": "^0.27.0",
    "lodash": "^4.17.21",
    "ts-node": "^10.5.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist/**/*.{js,css}",
            "docs",
            "package.json"
          ],
          "message": "chore: Release ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
